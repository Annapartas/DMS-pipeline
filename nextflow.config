params {
    multiqc_config = "$projectDir/multiqc_config.yml"
}

profiles {
    cluster {
        conda.enabled = true
        conda.useMamba = true

        process {
            executor = 'slurm'
            withName: ALIGN_SORT {
                cpus = 8
                memory = '8 GB'
                time = '1h'
            }
            withName: COUNT_CODONS {
                cpus = 8
                memory = '2 GB'
                time = '1h'
            }
            withName: FASTQC {
                cpus = 8
                memory = '4 GB'
                time = '1h'
            }
            withName: MULTIQC {
                cpus = 1
                memory = '256 MB'
                time = '10m'
            }
            withName: REMOVE_ADAPTER {
                cpus = 8
                memory = '1 GB'
                time = '10m'
            }
            withLabel: SAMTOOLS_STATS {
                cpus = 8
                memory = '1 GB'
                time = '1h'
            }
            withName: SUBSAMPLE {
                cpus = 8
                memory = '1 GB'
                time = '10m' 
            }
        }
    }

    local {
        conda.enabled = true
        conda.useMamba = true

        process {
            cpus = 8
            executor = 'local'
        }
    }
  
    stub {
        process.executor = 'local'
    }
}